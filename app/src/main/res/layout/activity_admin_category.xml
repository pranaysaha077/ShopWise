<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity">

    <TextView
        android:id="@+id/slogan_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Items"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear_layour_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layour_1"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/glasses"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/shoess"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/hats"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hats"
            android:padding="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layour_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_activity"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tshirts"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/sport_shirts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sports"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/purse"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/purses_bags"
            android:padding="5dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layour_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layour_2"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/headphoness"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/watches"

            />
        <ImageView
            android:id="@+id/mobile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/mobiles"
            android:padding="5dp"
            />


    </LinearLayout>


</RelativeLayout>